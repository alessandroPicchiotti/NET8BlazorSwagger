@page "/counter"

<PageTitle>Counter</PageTitle>

<MudIcon Icon="@Icons.Material.Filled.Favorite" Title="Favorite" />
<MudIcon Icon="@Icons.Material.Filled._7mp" Title="Favorite" Style="@($"color:{Colors.LightGreen.Accent3}; background:{Colors.BlueGray.Darken4};")" />

<h1>Counter</h1>

<p role="status" class="mud-elevation-0 py-8 px-10 rounded white">Current count: @currentCount</p>

@* <button class="btn btn-primary" @onclick="IncrementCount">Click me</button> *@
<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="IncrementCount" >Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

}
